<% provide(:title, 'New Topic') %>
<h1>New Topic</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@topic) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Create my topic", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
